<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardview1"
        android:layout_below="@id/profile_info"
        android:layout_height="65dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="2.0"



            android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:id="@+id/contact_card"

                    app:cardBackgroundColor="#188b04"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"

                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="1.0"
                    >
                    <LinearLayout
                        android:id="@+id/phone_linear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"


                        android:gravity="center"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        app:srcCompat="@drawable/ic_phone_in_talk_black_24dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/trainer_mobileno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="#fdfdfd"
                        android:text="Call"
                        />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/profile_emailcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                app:cardCornerRadius="5dp"


                android:layout_weight="1.0">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/gmail_xml"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/trainer_emaild"
                    android:textColor="#f93986"
                    android:fontFamily="sans-serif-condensed"

                    android:text="email"
                    android:textSize="20dp"
                    />
            </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>