<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".OTP_activity"

    android:background="@drawable/background_gradientcolor">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:textSize="30dp"
        android:textColor="#091016"
        android:text="Enter your OTP here"/>

 <EditText
     android:id="@+id/edt_otp"
     android:layout_marginTop="150dp"

     android:background="@drawable/cardview_border"
     android:paddingLeft="20dp"
     android:layout_width="fill_parent"
     android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
     android:layout_height="70dp"
     android:hint="Enter your  verification code"
     android:inputType="textPassword"
     android:textColorHint="#123"
     />
    <Button
        android:id="@+id/bt_conform"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="250dp"
        android:hint="Conform"
        android:background="@drawable/cardview_border"
        android:layout_below="@+id/edt_otp"
        android:layout_width="wrap_content"
        android:textColorHint="#123"
        android:layout_height="wrap_content" />


</RelativeLayout>